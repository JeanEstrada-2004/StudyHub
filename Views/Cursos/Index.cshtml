@model IEnumerable<StudyHub.Models.Curso>
@{
    ViewData["Title"] = "Cursos";
    var usuarioRol = Context.Session.GetString("UsuarioRol");
    var esProfesor = usuarioRol == "Profesor";
    var cursosActivos = Model.Count(c => c.Activo);
    var cursosInactivos = Model.Count(c => !c.Activo);
    var totalClases = Model.Sum(c => c.Clases.Count);
    var totalEstudiantes = Model.Sum(c => c.UsuarioCursos.Count(uc => uc.Rol == "Estudiante" && uc.Estado == "Aceptado"));
}

<div class="container-fluid">
    <!-- Header de página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Mis Cursos</h1>
            <p class="text-muted mb-0">Gestiona y accede a todos tus cursos</p>
        </div>
        <div class="btn-group">
            @if (esProfesor)
            {
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-circle me-2"></i>Nuevo Curso
                </a>
            }
            else
            {
                <a class="btn btn-outline-primary" asp-action="Explorar">
                    <i class="bi bi-compass me-2"></i>Explorar cursos
                </a>
                <a class="btn btn-outline-secondary" asp-action="Invitaciones">
                    <i class="bi bi-envelope me-2"></i>Mis invitaciones
                </a>
            }
        </div>
    </div>

    <!-- Estadísticas rápidas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card studyhub-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon text-primary">
                        <i class="bi bi-journals"></i>
                    </div>
                    <div class="stat-number">@Model.Count()</div>
                    <div class="stat-label">Total Cursos</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card studyhub-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon text-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-number">@cursosActivos</div>
                    <div class="stat-label">Cursos Activos</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card studyhub-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon text-info">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="stat-number">@totalClases</div>
                    <div class="stat-label">Total Clases</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card studyhub-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon text-warning">
                        <i class="bi bi-person-check"></i>
                    </div>
                    <div class="stat-number">@totalEstudiantes</div>
                    <div class="stat-label">Estudiantes</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros y búsqueda -->
    <div class="card studyhub-card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="inputBusqueda" placeholder="Buscar cursos por nombre, código...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="filtroEstado">
                        <option value="todos" selected>Todos los estados</option>
                        <option value="activo">Solo activos</option>
                        <option value="inactivo">Solo inactivos</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary w-100" id="btnResetFiltros">
                            <i class="bi bi-arrow-clockwise me-2"></i>Limpiar
                        </button>
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-funnel"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" data-orden="nombre">Ordenar por nombre</a></li>
                                <li><a class="dropdown-item" href="#" data-orden="codigo">Ordenar por código</a></li>
                                <li><a class="dropdown-item" href="#" data-orden="fecha">Ordenar por fecha</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#" data-orden="clases">Más clases primero</a></li>
                                <li><a class="dropdown-item" href="#" data-orden="estudiantes">Más estudiantes primero</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vista de cursos -->
    <div class="card studyhub-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-journals me-2"></i>Lista de Cursos
                <span class="badge bg-primary ms-2" id="contadorCursos">@Model.Count()</span>
            </h5>
            <div class="d-flex align-items-center gap-2">
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="btnViewType" id="btnViewGrid" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="btnViewGrid" title="Vista Grid">
                        <i class="bi bi-grid-3x3-gap"></i>
                    </label>

                    <input type="radio" class="btn-check" name="btnViewType" id="btnViewList" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnViewList" title="Vista Lista">
                        <i class="bi bi-list-ul"></i>
                    </label>
                </div>
            </div>
        </div>
        
        <div class="card-body p-0">
            <!-- Estado de carga -->
            <div id="loadingState" class="d-none text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando cursos...</span>
                </div>
                <p class="mt-2 text-muted">Cargando tus cursos...</p>
            </div>

            <!-- Estado vacío -->
            <div id="emptyState" class="d-none text-center py-5">
                <i class="bi bi-journals display-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No tienes cursos</h5>
                <p class="text-muted mb-4">
                    @if (esProfesor)
                    {
                        <span>Comienza creando tu primer curso.</span>
                    }
                    else
                    {
                        <span>Explora cursos disponibles o revisa tus invitaciones.</span>
                    }
                </p>
                <div class="d-flex gap-2 justify-content-center">
                    @if (esProfesor)
                    {
                        <a class="btn btn-primary" asp-action="Create">
                            <i class="bi bi-plus-circle me-2"></i>Crear Primer Curso
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-action="Explorar">
                            <i class="bi bi-compass me-2"></i>Explorar Cursos
                        </a>
                        <a class="btn btn-outline-secondary" asp-action="Invitaciones">
                            <i class="bi bi-envelope me-2"></i>Ver Invitaciones
                        </a>
                    }
                </div>
            </div>

            <!-- Vista Grid (por defecto) -->
            <div id="vistaGrid" class="vista-activa">
                <div class="row g-4 p-4" id="gridCursos">
                    @foreach (var curso in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6">
                            <div class="card curso-card h-100" data-estado="@(curso.Activo ? "activo" : "inactivo")" data-nombre="@curso.Nombre.ToLower()" data-codigo="@curso.Codigo.ToLower()">
                                <div class="card-header position-relative">
                                    <div class="curso-header-bg"></div>
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="curso-avatar">
                                            <i class="bi bi-journal-text"></i>
                                        </div>
                                        <div class="curso-badges">
                                            <span class="badge @(curso.Activo ? "bg-success" : "bg-secondary")">
                                                @(curso.Activo ? "Activo" : "Inactivo")
                                            </span>
                                            @if (!curso.Activo)
                                            {
                                                <span class="badge bg-warning ms-1" title="Curso inactivo - No visible para estudiantes">
                                                    <i class="bi bi-eye-slash"></i>
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title curso-titulo">@curso.Nombre</h5>
                                    <p class="card-text text-muted curso-codigo">
                                        <i class="bi bi-tag me-1"></i>@curso.Codigo
                                    </p>
                                    <p class="card-text curso-descripcion">
                                        @if (!string.IsNullOrEmpty(curso.Descripcion))
                                        {
                                            @(curso.Descripcion.Length > 120 ? curso.Descripcion.Substring(0, 120) + "..." : curso.Descripcion)
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin descripción</span>
                                        }
                                    </p>
                                    <div class="curso-meta">
                                        <div class="row text-center g-2">
                                            <div class="col-4">
                                                <div class="meta-item">
                                                    <i class="bi bi-journals text-primary"></i>
                                                    <small>@curso.Clases.Count clases</small>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="meta-item">
                                                    <i class="bi bi-people text-success"></i>
                                                    <small>@curso.UsuarioCursos.Count(uc => uc.Rol == "Estudiante" && uc.Estado == "Aceptado") estudiantes</small>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="meta-item">
                                                    <i class="bi bi-calendar3 text-info"></i>
                                                    <small>@curso.Clases.Sum(c => c.Sesiones.Count) sesiones</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="curso-info-adicional mt-3">
                                        <small class="text-muted">
                                            <i class="bi bi-person me-1"></i>Profesor: @curso.Profesor.Nombre
                                        </small>
                                        <br>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-top-0 pt-0">
                                    <div class="btn-group w-100" role="group">
                                        <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@curso.Id" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (esProfesor)
                                        {
                                            <a class="btn btn-outline-dark btn-sm" asp-action="Alumnos" asp-route-id="@curso.Id" title="Gestionar estudiantes">
                                                <i class="bi bi-people"></i>
                                            </a>
                                            <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@curso.Id" title="Editar curso">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@curso.Id" title="Eliminar curso">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-outline-info btn-sm" asp-action="Calendario" asp-route-id="@curso.Id" title="Ver calendario">
                                                <i class="bi bi-calendar3"></i>
                                            </a>
                                            <button class="btn btn-outline-secondary btn-sm" title="Marcar como favorito">
                                                <i class="bi bi-star"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Vista Lista (oculta por defecto) -->
            <div id="vistaLista" class="vista-oculta">
                <div class="list-group list-group-flush" id="listaCursos">
                    @foreach (var curso in Model)
                    {
                        <div class="list-group-item curso-list-item" data-estado="@(curso.Activo ? "activo" : "inactivo")" data-nombre="@curso.Nombre.ToLower()" data-codigo="@curso.Codigo.ToLower()">
                            <div class="row align-items-center">
                                <div class="col-md-1 text-center">
                                    <div class="curso-avatar-sm">
                                        <i class="bi bi-journal-text"></i>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <h6 class="mb-1">@curso.Nombre</h6>
                                    <p class="text-muted mb-1 small">
                                        <i class="bi bi-tag me-1"></i>@curso.Codigo
                                        @if (!string.IsNullOrEmpty(curso.Descripcion))
                                        {
                                            <span class="ms-2">|</span>
                                            @(curso.Descripcion.Length > 80 ? curso.Descripcion.Substring(0, 80) + "..." : curso.Descripcion)
                                        }
                                    </p>
                                    <div class="curso-meta-list">
                                        <small class="text-muted">
                                            <i class="bi bi-journals me-1"></i>@curso.Clases.Count clases |
                                            <i class="bi bi-people me-1 ms-2"></i>@curso.UsuarioCursos.Count(uc => uc.Rol == "Estudiante" && uc.Estado == "Activo") estudiantes |
                                            <i class="bi bi-calendar3 me-1 ms-2"></i>@curso.Clases.Sum(c => c.Sesiones.Count) sesiones
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="curso-badges-list">
                                        <span class="badge @(curso.Activo ? "bg-success" : "bg-secondary")">
                                            @(curso.Activo ? "Activo" : "Inactivo")
                                        </span>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-person-fill me-1"></i>@curso.Profesor.Nombre
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-3 text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@curso.Id" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (esProfesor)
                                        {
                                            <a class="btn btn-outline-dark" asp-action="Alumnos" asp-route-id="@curso.Id" title="Gestionar estudiantes">
                                                <i class="bi bi-people"></i>
                                            </a>
                                            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@curso.Id" title="Editar curso">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@curso.Id" title="Eliminar curso">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-outline-info" asp-action="Calendario" asp-route-id="@curso.Id" title="Ver calendario">
                                                <i class="bi bi-calendar3"></i>
                                            </a>
                                            <button class="btn btn-outline-secondary" title="Marcar como favorito">
                                                <i class="bi bi-star"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Footer con información adicional -->
        @if (Model.Any())
        {
            <div class="card-footer bg-light">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Mostrando <strong id="contadorVisible">@Model.Count()</strong> de <strong>@Model.Count()</strong> cursos
                        </small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small class="text-muted">
                            Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Acciones rápidas para profesores -->
    @if (esProfesor && Model.Any())
    {
        <div class="card studyhub-card mt-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning me-2 text-warning"></i>Acciones Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a class="btn btn-outline-primary w-100" asp-action="Create">
                            <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Curso
                        </a>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-success w-100" id="btnExportarCursos">
                            <i class="bi bi-download me-2"></i>Exportar Lista
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-outline-info w-100" id="btnVerEstadisticas">
                            <i class="bi bi-graph-up me-2"></i>Ver Estadísticas
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/views/Cursos.Index.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Cursos.Index.js" asp-append-version="true"></script>
}
