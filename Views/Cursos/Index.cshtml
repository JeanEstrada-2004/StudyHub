@model IEnumerable<StudyHub.Models.Curso>
@{
    ViewData["Title"] = "Cursos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Cursos</h1>
    <a class="btn btn-primary" asp-action="Create">Nuevo Curso</a>
  </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Codigo</td>
                <td>@(c.Activo?"Sí":"No")</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary me-1" asp-action="Details" asp-route-id="@c.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-dark me-1" asp-action="Alumnos" asp-route-id="@c.Id">Estudiantes</a>
                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Edit" asp-route-id="@c.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="~/css/views/Cursos.Index.css" asp-append-version="true" />
<script src="~/js/views/Cursos.Index.js" asp-append-version="true"></script>
