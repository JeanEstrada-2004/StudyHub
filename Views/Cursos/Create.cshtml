@model StudyHub.Models.Curso
@{
    ViewData["Title"] = "Nuevo Curso";
}

<h1>Nuevo Curso</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Codigo" class="form-label"></label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-check form-switch mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label">Activo</label>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

<link rel="stylesheet" href="~/css/views/Cursos.Create.css" asp-append-version="true" />
<script src="~/js/views/Cursos.Create.js" asp-append-version="true"></script>

