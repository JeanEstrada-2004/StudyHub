@model IEnumerable<StudyHub.Models.UsuarioCurso>
@{
    ViewData["Title"] = "Estudiantes del Curso";
    var curso = ViewBag.Curso as StudyHub.Models.Curso;
    var usuariosBusqueda = ViewBag.UsuariosBusqueda as IEnumerable<StudyHub.Models.Usuario>;
}

<div class="container-fluid">
    <!-- Header de página con breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Cursos" asp-action="Index">Cursos</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@curso.Id">@curso.Nombre</a></li>
            <li class="breadcrumb-item active" aria-current="page">Estudiantes</li>
        </ol>
    </nav>

    <!-- Header principal -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Gestión de Estudiantes</h1>
            <p class="text-muted mb-0">Curso: @curso.Nombre (@curso.Codigo)</p>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@curso.Id">
            <i class="bi bi-arrow-left me-2"></i>Volver al curso
        </a>
    </div>

    <!-- Alertas de feedback -->
    <div id="alertContainer">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <!-- Card de invitación -->
    <div class="card studyhub-card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-person-plus me-2"></i>Invitar nuevo estudiante
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="InvitarAlumno" method="post" class="row g-3" id="invitacionForm">
                <input type="hidden" name="cursoId" value="@curso.Id" />
                <div class="col-md-6 position-relative">
                    <label for="termino" class="form-label">Nombre o email del estudiante</label>
                    <input type="text"
                           name="termino"
                           id="terminoInvitacion"
                           class="form-control"
                           autocomplete="off"
                           placeholder="Ej: Juan Pérez o juan@correo.com"
                           required />
                    <div class="form-text">
                        Se buscará al estudiante por nombre o por correo electrónico registrado en la plataforma.
                    </div>

                    @if (usuariosBusqueda != null)
                    {
                        <div id="inviteSuggestions" class="invite-suggestions d-none">
                            @foreach (var u in usuariosBusqueda)
                            {
                                <button type="button"
                                        class="invite-suggestion-item"
                                        data-nombre="@u.Nombre"
                                        data-email="@u.Email">
                                    <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <div class="flex-grow-1 text-start">
                                        <div class="invite-suggestion-name">@u.Nombre</div>
                                        <div class="invite-suggestion-email">@u.Email</div>
                                    </div>
                                </button>
                            }
                        </div>
                    }
                </div>
                <div class="col-md-3">
                    <label for="rol" class="form-label">Rol en el curso</label>
                    <select name="rol" class="form-select">
                        <option value="Estudiante" selected>Estudiante</option>
                        <option value="Delegado">Delegado</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100" id="btnInvitar">
                        <i class="bi bi-send me-2"></i>Enviar invitación
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Card de lista de estudiantes -->
    <div class="card studyhub-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-people me-2"></i>Lista de estudiantes (@Model.Count())
            </h5>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary btn-sm" id="btnFiltros">
                    <i class="bi bi-funnel me-1"></i>Filtrar
                </button>
                <div class="input-group input-group-sm" style="width: 200px;">
                    <input type="text" class="form-control" placeholder="Buscar..." id="inputBusqueda">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <div class="card-body p-0">
            <!-- Estado de carga -->
            <div id="loadingState" class="d-none text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2 text-muted">Cargando estudiantes...</p>
            </div>

            <!-- Estado vacío -->
            <div id="emptyState" class="d-none text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No hay estudiantes en este curso</h5>
                <p class="text-muted">Invita estudiantes usando el formulario de arriba.</p>
            </div>

            <!-- Tabla de estudiantes -->
            <div class="table-responsive" id="tableContainer">
                <table class="table table-hover mb-0" id="tablaEstudiantes">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nombre</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uc in Model)
                        {
                            <tr data-estado="@uc.Estado.ToLower()"
                                data-rol="@uc.Rol.ToLower()"
                                data-nombre="@uc.Usuario!.Nombre.ToLower()"
                                data-email="@uc.Usuario!.Email.ToLower()">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@uc.Usuario!.Nombre</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@uc.Usuario!.Email</td>
                                <td>
                                    <span class="badge @(uc.Rol == "Estudiante" ? "bg-secondary" : "bg-primary")">
                                        @uc.Rol
                                    </span>
                                </td>
                                <td>
                                    <span class="badge 
                                        @(uc.Estado == "Activo" ? "bg-success" : 
                                          uc.Estado == "Pendiente" ? "bg-warning" : "bg-danger")">
                                        @uc.Estado
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm" role="group">
                                        @if (uc.Estado == "Pendiente")
                                        {
                                            <form asp-action="Aceptar" method="post" class="d-inline">
                                                <input type="hidden" name="usuarioCursoId" value="@uc.Id" />
                                                <button type="submit" class="btn btn-success" title="Aceptar estudiante">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                            <form asp-action="Rechazar" method="post" class="d-inline">
                                                <input type="hidden" name="usuarioCursoId" value="@uc.Id" />
                                                <button type="submit" class="btn btn-danger" title="Rechazar estudiante">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <div class="dropdown dropup d-inline">
                                                <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Cambiar rol">
                                                    <i class="bi bi-person-badge"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <form asp-action="CambiarRolAlumno" method="post" class="px-3 py-1">
                                                            <input type="hidden" name="usuarioCursoId" value="@uc.Id" />
                                                            <input type="hidden" name="nuevoRol" value="Estudiante" />
                                                            <button type="submit" class="btn btn-link p-0 text-start">Estudiante</button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form asp-action="CambiarRolAlumno" method="post" class="px-3 py-1">
                                                            <input type="hidden" name="usuarioCursoId" value="@uc.Id" />
                                                            <input type="hidden" name="nuevoRol" value="Delegado" />
                                                            <button type="submit" class="btn btn-link p-0 text-start">Delegado</button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                            <form asp-action="EliminarAlumno" method="post" class="d-inline">
                                                <input type="hidden" name="usuarioCursoId" value="@uc.Id" />
                                                <button type="submit" class="btn btn-outline-danger" title="Eliminar del curso">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/Cursos.Alumnos.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Cursos.Alumnos.js" asp-append-version="true"></script>
}

