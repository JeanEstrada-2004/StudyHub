@model IEnumerable<StudyHub.Models.Sesion>
@{
    ViewData["Title"] = "Calendario del Curso";
    var curso = ViewBag.Curso as StudyHub.Models.Curso;
}

<div class="container-fluid">
    <!-- Header de página con breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Cursos" asp-action="Index">Cursos</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@curso.Id">@curso.Nombre</a></li>
            <li class="breadcrumb-item active" aria-current="page">Calendario</li>
        </ol>
    </nav>

    <!-- Header principal -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Calendario de Sesiones</h1>
            <p class="text-muted mb-0">Curso: @curso.Nombre (@curso.Codigo)</p>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary active" data-vista="lista">
                <i class="bi bi-list-ul me-2"></i>Vista Lista
            </button>
            <button type="button" class="btn btn-outline-secondary" data-vista="calendario">
                <i class="bi bi-calendar3 me-2"></i>Vista Calendario
            </button>
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@curso.Id">
                <i class="bi bi-arrow-left me-2"></i>Volver al curso
            </a>
        </div>
    </div>

    <!-- Filtros y controles -->
    <div class="card studyhub-card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label for="filtroMes" class="form-label">Filtrar por mes</label>
                    <select class="form-select" id="filtroMes">
                        <option value="todos" selected>Todos los meses</option>
                        <option value="0">Enero</option>
                        <option value="1">Febrero</option>
                        <option value="2">Marzo</option>
                        <option value="3">Abril</option>
                        <option value="4">Mayo</option>
                        <option value="5">Junio</option>
                        <option value="6">Julio</option>
                        <option value="7">Agosto</option>
                        <option value="8">Septiembre</option>
                        <option value="9">Octubre</option>
                        <option value="10">Noviembre</option>
                        <option value="11">Diciembre</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="filtroEstado" class="form-label">Filtrar por estado</label>
                    <select class="form-select" id="filtroEstado">
                        <option value="todos" selected>Todas las sesiones</option>
                        <option value="proximas">Próximas sesiones</option>
                        <option value="pasadas">Sesiones pasadas</option>
                        <option value="hoy">Hoy</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="button" class="btn btn-outline-secondary w-100" id="btnResetFiltros">
                            <i class="bi bi-arrow-clockwise me-2"></i>Restablecer filtros
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vista Lista (por defecto) -->
    <div id="vistaLista" class="vista-activa">
        <div class="card studyhub-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-check me-2"></i>
                    Sesiones programadas (@Model.Count())
                </h5>
                <div class="text-muted small" id="contadorSesiones">
                    Mostrando @Model.Count() sesiones
                </div>
            </div>
            <div class="card-body p-0">
                <!-- Estado vacío -->
                @if (!Model.Any())
                {
                    <div class="text-center py-5" id="emptyState">
                        <i class="bi bi-calendar-x display-1 text-muted"></i>
                        <h5 class="mt-3 text-muted">No hay sesiones programadas</h5>
                        <p class="text-muted mb-4">Este curso aún no tiene sesiones de clase programadas.</p>
                        <a class="btn btn-primary" asp-controller="Clases" asp-action="Index" asp-route-cursoId="@curso.Id">
                            <i class="bi bi-plus-circle me-2"></i>Gestionar clases
                        </a>
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush" id="listaSesiones">
                        @{
                            var sesionesAgrupadas = Model.GroupBy(s => s.FechaHora.ToLocalTime().Date)
                                                        .OrderBy(g => g.Key);
                        }
                        @foreach (var grupo in sesionesAgrupadas)
                        {
                            <div class="list-group-item bg-light py-3">
                                <h6 class="mb-0 text-primary">
                                    <i class="bi bi-calendar-date me-2"></i>
                                    @grupo.Key.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))
                                </h6>
                            </div>
                            
                            @foreach (var sesion in grupo.OrderBy(s => s.FechaHora))
                            {
                                <div class="list-group-item sesion-item" 
                                     data-fecha="@sesion.FechaHora.ToString("yyyy-MM-dd")"
                                     data-estado="@(sesion.FechaHora > DateTime.Now ? "proxima" : "pasada")">
                                    <div class="row align-items-center">
                                        <div class="col-md-1 text-center">
                                            <div class="hora-sesion">
                                                <div class="hora">@sesion.FechaHora.ToLocalTime().ToString("HH:mm")</div>
                                                <div class="duracion badge bg-secondary">@sesion.DuracionMinutos min</div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <h6 class="mb-1">@sesion.Titulo</h6>
                                            <p class="text-muted mb-1">
                                                <i class="bi bi-journal-text me-1"></i>
                                                Clase: @sesion.Clase!.Titulo
                                            </p>
                                            <p class="text-muted mb-0">
                                                <i class="bi bi-geo-alt me-1"></i>
                                                @sesion.Ubicacion
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <div class="btn-group">
                                                <a class="btn btn-outline-primary btn-sm" 
                                                   asp-controller="Clases" 
                                                   asp-action="Details" 
                                                   asp-route-id="@sesion.ClaseId">
                                                    <i class="bi bi-eye me-1"></i>Ver clase
                                                </a>
                                                <button class="btn btn-outline-secondary btn-sm btn-info-sesion" 
                                                        data-sesion-id="@sesion.Id"
                                                        title="Más información">
                                                    <i class="bi bi-info-circle"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Vista Calendario (oculta por defecto) -->
    <div id="vistaCalendario" class="vista-oculta">
        <div class="card studyhub-card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar3 me-2"></i>
                    Vista de calendario
                </h5>
            </div>
            <div class="card-body">
                <div id="calendarioGrid" class="calendario-grid">
                    <!-- El calendario se generará dinámicamente con JavaScript -->
                    <div class="text-center py-5 text-muted">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Cargando calendario...</span>
                        </div>
                        <p class="mt-2">Cargando vista de calendario...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/Cursos.Calendario.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Cursos.Calendario.js" asp-append-version="true"></script>
}