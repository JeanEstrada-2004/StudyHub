@{
    ViewData["Title"] = "Error";
    var errorMessage = ViewData["ErrorMessage"] as string ?? "Ha ocurrido un error inesperado.";
    var stackTrace = ViewData["StackTrace"] as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
            <h1 class="text-danger mt-3">Error</h1>
            <h2 class="text-muted">Lo sentimos, ha ocurrido un error</h2>
            
            <div class="alert alert-danger mt-4">
                <p class="mb-0">@errorMessage</p>
            </div>

            @if (!string.IsNullOrEmpty(stackTrace))
            {
                <details class="mt-4">
                    <summary class="btn btn-outline-secondary">Detalles técnicos</summary>
                    <pre class="text-start mt-3 p-3 bg-light border rounded"><code>@stackTrace</code></pre>
                </details>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="bi bi-house"></i> Volver al Inicio
                </a>
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver Atrás
                </a>
            </div>
        </div>
    </div>
</div>
<script src="~/js/views/Shared.Error.js" asp-append-version="true"></script>


<link rel="stylesheet" href="~/css/views/Shared.Error.css" asp-append-version="true" />

<script src="~/js/views/Shared.Error.js" asp-append-version="true"></script>

