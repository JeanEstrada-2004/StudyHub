<!-- Error.cshtml -->
@{
    ViewData["Title"] = "Error";
    var errorMessage = ViewData["ErrorMessage"] as string ?? "Ha ocurrido un error inesperado.";
    var stackTrace = ViewData["StackTrace"] as string;
    var errorCode = ViewData["ErrorCode"] as string ?? "500";
    var requestId = ViewData["RequestId"] as string;
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-75">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <!-- Tarjeta de error -->
            <div class="card shadow-lg border-0 error-card">
                <div class="card-body text-center p-5">
                    <!-- Icono animado -->
                    <div class="error-icon mb-4">
                        <div class="error-icon-inner">
                            <i class="bi bi-exclamation-octagon text-danger"></i>
                        </div>
                    </div>

                    <!-- Encabezado del error -->
                    <h1 class="display-4 fw-bold text-danger mb-3">Error @errorCode</h1>
                    <h2 class="h4 text-muted mb-4">¡Vaya! Algo salió mal</h2>

                    <!-- Mensaje de error -->
                    <div class="alert alert-danger alert-error mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-bug-fill me-3 fs-5"></i>
                            <div class="flex-grow-1">
                                <p class="mb-0 fw-semibold">@errorMessage</p>
                            </div>
                        </div>
                    </div>

                    <!-- Información adicional -->
                    <div class="row g-3 mb-4 text-start">
                        @if (!string.IsNullOrEmpty(requestId))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-hash me-2"></i>
                                    <small>ID de solicitud: <span class="fw-semibold">@requestId</span></small>
                                </div>
                            </div>
                        }
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-clock me-2"></i>
                                <small>Hora: <span class="fw-semibold">@DateTime.Now.ToString("HH:mm:ss")</span></small>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles técnicos (acordeón) -->
                    @if (!string.IsNullOrEmpty(stackTrace))
                    {
                        <div class="technical-details mb-4">
                            <div class="accordion" id="errorAccordion">
                                <div class="accordion-item border-0">
                                    <h3 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#errorDetails">
                                            <i class="bi bi-terminal me-2"></i>
                                            Detalles técnicos del error
                                        </button>
                                    </h3>
                                    <div id="errorDetails" class="accordion-collapse collapse" data-bs-parent="#errorAccordion">
                                        <div class="accordion-body">
                                            <pre class="text-start mt-3 p-3 bg-dark text-light rounded"><code>@stackTrace</code></pre>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Acciones -->
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-fill me-2"></i>Volver al Inicio
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Volver Atrás
                        </a>
                        <button id="btn-report-error" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-envelope-exclamation me-2"></i>Reportar Error
                        </button>
                    </div>

                    <!-- Soporte adicional -->
                    <div class="mt-5 pt-4 border-top">
                        <p class="text-muted mb-3">¿Necesitas ayuda adicional?</p>
                        <div class="d-flex justify-content-center gap-4">
                            <a href="#" class="text-decoration-none text-primary">
                                <i class="bi bi-question-circle me-1"></i>Centro de ayuda
                            </a>
                            <a href="#" class="text-decoration-none text-primary">
                                <i class="bi bi-envelope me-1"></i>Contactar soporte
                            </a>
                            <a href="#" class="text-decoration-none text-primary">
                                <i class="bi bi-chat-dots me-1"></i>Chat en vivo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/Shared.Error.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Shared.Error.js" asp-append-version="true"></script>
}