<!-- Home.Index.cshtml -->
@{
    ViewData["Title"] = "StudyHub - Plataforma Educativa";
}

<!-- Cargar CSS específico directamente -->
<link rel="stylesheet" href="~/css/views/Home.Index.css" asp-append-version="true" />

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 animate-fade-in">
                <h1 class="hero-title">Bienvenido a StudyHub</h1>
                <p class="hero-subtitle">
                    La plataforma educativa colaborativa que revoluciona la forma de enseñar y aprender. 
                    Gestiona tus clases, comparte recursos y conecta con tu comunidad educativa.
                </p>
                <div class="mt-4">
                    <a href="/Auth/Login" class="btn btn-hero-primary btn-hero">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Comenzar Ahora
                    </a>
                    <a href="#features" class="btn btn-hero-outline btn-hero">
                        <i class="bi bi-info-circle me-2"></i>Más Información
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center animate-fade-in" style="animation-delay: 0.2s;">
                <div class="hero-image-container">
                    <img src="~/img/banner_01.png" alt="StudyHub - Plataforma Educativa" class="hero-image" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de Estadísticas -->
<div class="stats-section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-number" data-target="500">500+</div>
                <div class="stat-label">Clases Activas</div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-number" data-target="2000">2,000+</div>
                <div class="stat-label">Estudiantes</div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-number" data-target="150">150+</div>
                <div class="stat-label">Profesores</div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-number" data-target="98">98%</div>
                <div class="stat-label">Satisfacción</div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de Características -->
<div id="features" class="container">
    <h2 class="section-title">¿Por qué elegir StudyHub?</h2>
    <p class="section-subtitle">
        Descubre las características que hacen de StudyHub la plataforma educativa preferida 
        por instituciones y profesionales de la educación.
    </p>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-people"></i>
                </div>
                <h4 class="feature-title">Gestión de Clases</h4>
                <p class="feature-description">
                    Crea y gestiona tus clases de manera eficiente. Invita estudiantes, 
                    programa sesiones y organiza el contenido educativo en un solo lugar.
                </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-calendar-week"></i>
                </div>
                <h4 class="feature-title">Calendario Integrado</h4>
                <p class="feature-description">
                    Programa sesiones de estudio, establece recordatorios y mantén un 
                    control completo de tu agenda académica con nuestro calendario inteligente.
                </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-chat-dots"></i>
                </div>
                <h4 class="feature-title">Foros Colaborativos</h4>
                <p class="feature-description">
                    Fomenta la participación con foros de discusión moderados. 
                    Los estudiantes pueden hacer preguntas y colaborar en tiempo real.
                </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-cloud-arrow-up"></i>
                </div>
                <h4 class="feature-title">Recursos Digitales</h4>
                <p class="feature-description">
                    Sube y comparte materiales educativos, presentaciones, documentos 
                    y recursos multimedia de forma segura y organizada.
                </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <h4 class="feature-title">Seguimiento de Progreso</h4>
                <p class="feature-description">
                    Monitorea el avance de tus estudiantes y genera reportes detallados 
                    para identificar oportunidades de mejora.
                </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h4 class="feature-title">Ambiente Seguro</h4>
                <p class="feature-description">
                    Plataforma segura con roles de usuario, permisos granulares y 
                    protección de datos para garantizar la privacidad de la información.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Sección CTA -->
<div class="cta-section">
    <div class="container text-center">
        <h2 class="section-title">¿Listo para transformar tu experiencia educativa?</h2>
        <p class="section-subtitle">
            Únete a la comunidad de StudyHub y descubre una nueva forma de enseñar y aprender
        </p>
        <div class="mt-4">
            <a href="/Auth/Register" class="btn btn-primary btn-lg me-3">
                <i class="bi bi-person-plus me-2"></i>Registrarse Gratis
            </a>
            <a href="/Home/About" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-play-circle me-2"></i>Ver Demo
            </a>
        </div>
    </div>
</div>

<!-- Toast de Bienvenida rediseñado -->
<div class="welcome-toast-container">
    <div id="welcomeToast" class="welcome-toast card shadow-sm border-0" role="alert">
        <div class="card-body d-flex align-items-start">
            <div class="welcome-toast-icon me-3">
                <i class="bi bi-emoji-smile"></i>
            </div>
            <div class="flex-grow-1">
                <h6 class="mb-1 fw-semibold">Bienvenido a StudyHub</h6>
                <p class="mb-0 small text-muted">
                    Descubre una nueva forma de enseñar y aprender con nuestra plataforma colaborativa.
                </p>
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/views/Home.Index.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastElement = document.getElementById('welcomeToast');
            if (toastElement && bootstrap && bootstrap.Toast) {
                var toast = new bootstrap.Toast(toastElement, { delay: 6000 });
                toast.show();
            }
        });
    </script>
}

