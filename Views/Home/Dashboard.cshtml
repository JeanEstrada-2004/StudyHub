@model StudyHub.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var usuarioRol = Context.Session.GetString("UsuarioRol");
    var esProfesor = usuarioRol == "Profesor";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </nav>

    <!-- Header del Dashboard -->
    <div class="row align-items-end mb-5">
        <div class="col-md-8">
            <div class="d-flex align-items-center">
                <div class="dashboard-avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                    <i class="bi bi-person-fill fs-4"></i>
                </div>
                <div>
                    <h1 class="h2 mb-1">Bienvenido, @Model.Usuario.Nombre!</h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-@(esProfesor ? "person-gear" : "person-video") me-1"></i>
                        @(esProfesor ? "Profesor" : "Estudiante") · StudyHub
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <div class="btn-group">
                <button class="btn btn-outline-primary btn-sm" id="refreshDashboard">
                    <i class="bi bi-arrow-clockwise"></i> Actualizar
                </button>
                <button class="btn btn-outline-secondary btn-sm" id="helpDashboard">
                    <i class="bi bi-question-circle"></i> Ayuda
                </button>
            </div>
        </div>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card summary-card summary-cursos border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="summary-icon bg-primary text-white rounded-circle flex-shrink-0">
                            <i class="bi bi-journals"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="card-title text-muted mb-1">Mis Cursos</h6>
                            <h2 class="mb-0">@Model.TotalCursos</h2>
                            <small class="text-muted">Total inscrito</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="@Url.Action("Index", "Cursos")" class="text-primary text-decoration-none small">
                        Ver todos <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card summary-card summary-sesiones border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="summary-icon bg-success text-white rounded-circle flex-shrink-0">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="card-title text-muted mb-1">Próximas Sesiones</h6>
                            <h2 class="mb-0">@Model.ProximasSesionesCount</h2>
                            <small class="text-muted">En los próximos días</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="@Url.Action("Calendario", "Sesiones")" class="text-success text-decoration-none small">
                        Ver calendario <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card summary-card summary-actividad border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="summary-icon bg-info text-white rounded-circle flex-shrink-0">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="card-title text-muted mb-1">Actividad Reciente</h6>
                            <h2 class="mb-0">@(Model.MisCursos.Count + Model.ProximasSesiones.Count)</h2>
                            <small class="text-muted">Elementos activos</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <span class="text-info text-decoration-none small">
                        Actualizado ahora
                    </span>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card summary-card summary-perfil border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="summary-icon bg-warning text-white rounded-circle flex-shrink-0">
                            <i class="bi bi-person-badge"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="card-title text-muted mb-1">Mi Perfil</h6>
                            <h2 class="mb-0">@Model.Usuario.Nombre.Split(' ')[0]</h2>
                            <small class="text-muted">@(esProfesor ? "Profesor" : "Estudiante")</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="@Url.Action("Index", "Perfil")" class="text-warning text-decoration-none small">
                        Editar perfil <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos Rápidos -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge text-primary me-2"></i>
                        Accesos Rápidos
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a href="@Url.Action("Calendario", "Sesiones")" class="quick-access-card text-decoration-none">
                                <div class="card border-0 h-100 text-center transition-all">
                                    <div class="card-body p-3">
                                        <div class="quick-access-icon bg-primary text-white rounded-circle mx-auto mb-3">
                                            <i class="bi bi-calendar-week"></i>
                                        </div>
                                        <h6 class="card-title mb-0">Ver Calendario</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        
                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a href="@Url.Action("Index", "Cursos")" class="quick-access-card text-decoration-none">
                                <div class="card border-0 h-100 text-center transition-all">
                                    <div class="card-body p-3">
                                        <div class="quick-access-icon bg-success text-white rounded-circle mx-auto mb-3">
                                            <i class="bi bi-journals"></i>
                                        </div>
                                        <h6 class="card-title mb-0">Mis Cursos</h6>
                                    </div>
                                </div>
                            </a>
                        </div>

                        @if (esProfesor)
                        {
                            <div class="col-xl-2 col-md-4 col-sm-6">
                                <a href="@Url.Action("Create", "Cursos")" class="quick-access-card text-decoration-none">
                                    <div class="card border-0 h-100 text-center transition-all">
                                        <div class="card-body p-3">
                                            <div class="quick-access-icon bg-dark text-white rounded-circle mx-auto mb-3">
                                                <i class="bi bi-plus-circle"></i>
                                            </div>
                                            <h6 class="card-title mb-0">Crear Curso</h6>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <div class="col-xl-2 col-md-4 col-sm-6">
                                <a href="@Url.Action("Create", "Clases")" class="quick-access-card text-decoration-none">
                                    <div class="card border-0 h-100 text-center transition-all">
                                        <div class="card-body p-3">
                                            <div class="quick-access-icon bg-warning text-white rounded-circle mx-auto mb-3">
                                                <i class="bi bi-file-earmark-plus"></i>
                                            </div>
                                            <h6 class="card-title mb-0">Crear Clase</h6>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }

                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a href="@Url.Action("Index", "Perfil")" class="quick-access-card text-decoration-none">
                                <div class="card border-0 h-100 text-center transition-all">
                                    <div class="card-body p-3">
                                        <div class="quick-access-icon bg-info text-white rounded-circle mx-auto mb-3">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                                        <h6 class="card-title mb-0">Mi Perfil</h6>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-xl-2 col-md-4 col-sm-6">
                            <a href="#" class="quick-access-card text-decoration-none" id="helpCenterBtn">
                                <div class="card border-0 h-100 text-center transition-all">
                                    <div class="card-body p-3">
                                        <div class="quick-access-icon bg-secondary text-white rounded-circle mx-auto mb-3">
                                            <i class="bi bi-question-circle"></i>
                                        </div>
                                        <h6 class="card-title mb-0">Centro de Ayuda</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="row">
        <!-- Mis Cursos -->
        <div class="col-xl-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-journals text-primary me-2"></i>
                        Mis Cursos
                    </h5>
                    <a href="@Url.Action("Index", "Cursos")" class="btn btn-sm btn-outline-primary">
                        Ver todos
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.MisCursos.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var curso in Model.MisCursos.Take(5))
                            {
                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="curso-avatar bg-light-primary text-primary rounded-circle flex-shrink-0 me-3">
                                            <i class="bi bi-journal-text"></i>
                                        </div>
                                        <div class="flex-grow-1 me-3">
                                            <h6 class="mb-1">@curso.Nombre</h6>
                                            <p class="text-muted small mb-0">@curso.Codigo</p>
                                        </div>
                                        <div class="flex-shrink-0">
                                            <a href="@Url.Action("Details", "Cursos", new { id = curso.Id })" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Ver curso">
                                                <i class="bi bi-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.MisCursos.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    Y @(Model.MisCursos.Count - 5) cursos más...
                                </small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="empty-state-icon mb-3">
                                <i class="bi bi-journals text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="text-muted">No tienes cursos aún</h5>
                            <p class="text-muted mb-4">Comienza explorando los cursos disponibles o creando uno nuevo.</p>
                            @if (esProfesor)
                            {
                                <a href="@Url.Action("Create", "Cursos")" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-2"></i>Crear Mi Primer Curso
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Index", "Cursos")" class="btn btn-primary">
                                    <i class="bi bi-search me-2"></i>Explorar Cursos
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Próximas Sesiones -->
        <div class="col-xl-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check text-success me-2"></i>
                        Próximas Sesiones
                    </h5>
                    <a href="@Url.Action("Calendario", "Sesiones")" class="btn btn-sm btn-outline-success">
                        Ver calendario
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.ProximasSesiones.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var sesion in Model.ProximasSesiones.Take(5))
                            {
                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-start">
                                        <div class="sesion-indicator bg-success rounded flex-shrink-0 me-3 mt-1"></div>
                                        <div class="flex-grow-1 me-3">
                                            <h6 class="mb-1">@sesion.Titulo</h6>
                                            <p class="text-muted small mb-1">@sesion.Clase.Titulo</p>
                                            <div class="d-flex align-items-center text-muted small">
                                                <i class="bi bi-calendar-event me-1"></i>
                                                <span>@sesion.FechaHora.ToString("dd/MM/yyyy HH:mm")</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(sesion.Ubicacion))
                                            {
                                                <div class="d-flex align-items-center text-muted small mt-1">
                                                    <i class="bi bi-geo-alt me-1"></i>
                                                    <span>@sesion.Ubicacion</span>
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-shrink-0">
                                            <span class="badge bg-light text-dark small">
                                                <i class="bi bi-clock me-1"></i>
                                                @sesion.FechaHora.ToString("HH:mm")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.ProximasSesiones.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    Y @(Model.ProximasSesiones.Count - 5) sesiones más...
                                </small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="empty-state-icon mb-3">
                                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="text-muted">No hay sesiones programadas</h5>
                            <p class="text-muted mb-4">Las próximas sesiones de tus cursos aparecerán aquí.</p>
                            <a href="@Url.Action("Calendario", "Sesiones")" class="btn btn-outline-success">
                                <i class="bi bi-calendar-week me-2"></i>Ver Calendario Completo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Footer del Dashboard -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="text-center text-muted small">
                <p class="mb-0">
                    StudyHub Dashboard · Actualizado el @DateTime.Now.ToString("dd/MM/yyyy 'a las' HH:mm") · 
                    <a href="#" class="text-muted text-decoration-none" id="dashboardFeedback">Enviar feedback</a>
                </p>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/Home.Dashboard.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Home.Dashboard.js" asp-append-version="true"></script>
}