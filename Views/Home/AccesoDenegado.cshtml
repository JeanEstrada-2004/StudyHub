@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
            <h1 class="text-danger mt-3">Acceso Denegado</h1>
            <p class="lead">No tienes permisos para acceder a esta página.</p>
            <p class="text-muted">Si crees que esto es un error, contacta al administrador.</p>
            
            <div class="mt-4">
                <a href="@Url.Action("Dashboard", "Home")" class="btn btn-primary">
                    <i class="bi bi-house"></i> Volver al Dashboard
                </a>
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver Atrás
                </a>
            </div>
        </div>
    </div>
</div>
<script src="~/js/views/Home.AccesoDenegado.js" asp-append-version="true"></script>


<link rel="stylesheet" href="~/css/views/Home.AccesoDenegado.css" asp-append-version="true" />

