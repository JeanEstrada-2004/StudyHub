@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Perfil")">Mi Perfil</a></li>
            <li class="breadcrumb-item active text-muted" aria-current="page">Cambiar Contraseña</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="password-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h1 class="h2 mb-2">Cambiar Contraseña</h1>
                <p class="text-muted">
                    Actualiza tu contraseña para mantener segura tu cuenta de StudyHub
                </p>
            </div>

            <!-- Card del Formulario -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <!-- Alertas -->
                    <div class="alert-container mb-4">
                        @if (ViewData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <div>@ViewData["Success"]</div>
                                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (ViewData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ViewData["Error"]</div>
                                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                            </div>
                        }
                    </div>

                    <form asp-action="CambiarPassword" method="post" id="cambiarPasswordForm">
                        <!-- Contraseña Actual -->
                        <div class="form-group mb-4">
                            <label for="passwordActual" class="form-label fw-semibold">
                                <i class="bi bi-key me-2"></i>Contraseña Actual
                            </label>
                            <div class="input-group">
                                <input type="password" name="passwordActual" class="form-control password-input" 
                                       placeholder="Ingresa tu contraseña actual" required 
                                       id="passwordActual" autocomplete="current-password" />
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="passwordActual">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            @if (ViewData["ErrorPasswordActual"] != null)
                            {
                                <div class="text-danger small mt-2">
                                    <i class="bi bi-exclamation-circle me-1"></i>@ViewData["ErrorPasswordActual"]
                                </div>
                            }
                        </div>

                        <!-- Nueva Contraseña -->
                        <div class="form-group mb-4">
                            <label for="nuevaPassword" class="form-label fw-semibold">
                                <i class="bi bi-key-fill me-2"></i>Nueva Contraseña
                            </label>
                            <div class="input-group">
                                <input type="password" name="nuevaPassword" class="form-control password-input" 
                                       placeholder="Crea una nueva contraseña segura" required 
                                       id="nuevaPassword" autocomplete="new-password" />
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="nuevaPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            
                            <!-- Indicador de Fortaleza -->
                            <div class="password-strength mt-3">
                                <div class="progress mb-2" style="height: 4px;">
                                    <div class="progress-bar" id="passwordStrengthBar" role="progressbar" style="width: 0%"></div>
                                </div>
                                <div class="password-requirements">
                                    <small class="text-muted" id="passwordStrengthText">La contraseña debe tener al menos 8 caracteres</small>
                                </div>
                                <div class="requirements-list mt-2">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input requirement-check" type="checkbox" id="reqLength" disabled>
                                        <label class="form-check-label small" for="reqLength">8+ caracteres</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input requirement-check" type="checkbox" id="reqUpper" disabled>
                                        <label class="form-check-label small" for="reqUpper">Mayúscula</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input requirement-check" type="checkbox" id="reqLower" disabled>
                                        <label class="form-check-label small" for="reqLower">Minúscula</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input requirement-check" type="checkbox" id="reqNumber" disabled>
                                        <label class="form-check-label small" for="reqNumber">Número</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input requirement-check" type="checkbox" id="reqSpecial" disabled>
                                        <label class="form-check-label small" for="reqSpecial">Carácter especial</label>
                                    </div>
                                </div>
                            </div>
                            
                            @if (ViewData["ErrorNuevaPassword"] != null)
                            {
                                <div class="text-danger small mt-2">
                                    <i class="bi bi-exclamation-circle me-1"></i>@ViewData["ErrorNuevaPassword"]
                                </div>
                            }
                        </div>

                        <!-- Confirmar Contraseña -->
                        <div class="form-group mb-4">
                            <label for="confirmarPassword" class="form-label fw-semibold">
                                <i class="bi bi-key-fill me-2"></i>Confirmar Nueva Contraseña
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control password-input" 
                                       placeholder="Confirma tu nueva contraseña" 
                                       id="confirmarPassword" autocomplete="new-password" />
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="confirmarPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="text-danger small mt-2" id="confirmarPasswordError" style="display: none;">
                                <i class="bi bi-exclamation-circle me-1"></i>Las contraseñas no coinciden
                            </div>
                        </div>

                        <!-- Información de Seguridad -->
                        <div class="alert alert-info border-0">
                            <div class="d-flex">
                                <i class="bi bi-info-circle text-primary me-2 mt-1"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Consejos de Seguridad</h6>
                                    <ul class="small mb-0 ps-3">
                                        <li>Usa una combinación de letras, números y símbolos</li>
                                        <li>Evita usar información personal fácil de adivinar</li>
                                        <li>No reutilices contraseñas de otras cuentas</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-shield-check me-2"></i>Cambiar Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="bi bi-clock-history me-1"></i>
                    Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/Perfil.CambiarPassword.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Perfil.CambiarPassword.js" asp-append-version="true"></script>
}