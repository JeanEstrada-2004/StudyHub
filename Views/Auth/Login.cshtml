@{
    ViewData["Title"] = "Iniciar Sesión - StudyHub";
}

<div class="login-container">
    <div class="row justify-content-center align-items-center min-vh-80">
        <div class="col-md-6 col-lg-5">
            <div class="login-card">
                <div class="login-header">
                    <div class="login-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h1 class="login-title">Iniciar Sesión</h1>
                    <p class="login-subtitle">Bienvenido de vuelta a StudyHub</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post" asp-action="Login" class="login-form" id="loginForm">
                    <div class="form-group">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input type="email" class="form-control" id="email" name="email" 
                                   placeholder="tu@email.com" required>
                        </div>
                        <div class="form-text">Ingresa tu correo institucional o personal</div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="password" name="password" 
                                   placeholder="Tu contraseña" required>
                            <button type="button" class="input-group-text toggle-password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <div class="form-text">
                            <a href="#" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                        </div>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                        <label class="form-check-label" for="rememberMe">Recordar mi sesión</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 login-btn" id="loginButton">
                        <span class="btn-text">Iniciar Sesión</span>
                        <div class="btn-loading d-none">
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            Iniciando sesión...
                        </div>
                    </button>
                </form>

                <div class="login-footer">
                    <p class="text-center mb-3">¿No tienes una cuenta?</p>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary w-100">
                        <i class="bi bi-person-plus me-2"></i>Crear Cuenta
                    </a>
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-link">
                            <i class="bi bi-arrow-left me-1"></i>Volver al inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-5 d-none d-md-block">
            <div class="login-hero">
                <div class="hero-content">
                    <div class="hero-icon">
                        <i class="bi bi-journal-bookmark"></i>
                    </div>
                    <h2>StudyHub</h2>
                    <p class="hero-text">
                        Únete a miles de estudiantes y profesores que ya están transformando 
                        su experiencia educativa con nuestra plataforma.
                    </p>
                    <div class="hero-features">
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            <span>Gestión de clases intuitiva</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            <span>Recursos educativos organizados</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill text-success"></i>
                            <span>Comunidad colaborativa</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast para mensajes -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="loginToast" class="toast" role="alert">
        <div class="toast-header">
            <i class="bi bi-info-circle text-primary me-2"></i>
            <strong class="me-auto">StudyHub</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            <!-- Mensaje dinámico -->
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/Auth.Login.css" asp-append-version="true" />

@section Scripts {
    <script src="~/js/views/Auth.Login.js" asp-append-version="true"></script>
}