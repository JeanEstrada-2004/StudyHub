@model StudyHub.Models.Clase
@{
    ViewData["Title"] = "Editar Clase";
}

<h1>Editar Clase</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Curso</label>
        <select asp-for="CursoId" class="form-select" asp-items="ViewBag.Cursos"></select>
        <span asp-validation-for="CursoId" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="EsPublica" class="form-check-input" />
        <label asp-for="EsPublica" class="form-check-label"></label>
    </div>
    <div class="mb-3">
        <label asp-for="MaxEstudiantes" class="form-label"></label>
        <input asp-for="MaxEstudiantes" class="form-control" />
        <span asp-validation-for="MaxEstudiantes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-link">Volver al Dashboard</a>
</form>
<script src="~/js/views/Clases.Edit.js" asp-append-version="true"></script>


<link rel="stylesheet" href="~/css/views/Clases.Edit.css" asp-append-version="true" />

<script src="~/js/views/Clases.Edit.js" asp-append-version="true"></script>

