@model IEnumerable<StudyHub.Models.Clase>
@{
    ViewData["Title"] = "Mis Clases";
    var rol = Context.Session.GetString("UsuarioRol");
}

<div class="container-fluid">
    <!-- Header con Breadcrumbs -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">@ViewData["Title"]</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Mis Clases</li>
                </ol>
            </nav>
        </div>
        <div class="btn-group">
            @if (rol == "Profesor")
            {
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Clase
                </a>
            }
            <button class="btn btn-outline-primary" id="filterToggle">
                <i class="bi bi-funnel"></i>
            </button>
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="card mb-4 d-none" id="filtersCard">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="searchInput" class="form-label">Buscar Clases</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Buscar por título o curso...">
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Estado</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">Todos</option>
                        <option value="active">Activas</option>
                        <option value="inactive">Inactivas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="sortSelect" class="form-label">Ordenar por</label>
                    <select class="form-select" id="sortSelect">
                        <option value="newest">Más recientes</option>
                        <option value="oldest">Más antiguas</option>
                        <option value="title">Título A-Z</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    @if (!Model.Any())
    {
        <!-- Estado Vacío -->
        <div class="card">
            <div class="card-body text-center py-5 empty-state">
                <i class="bi bi-journals display-1 text-muted mb-3"></i>
                <h3 class="h4 text-muted">No tienes clases registradas</h3>
                <p class="text-muted mb-4">Comienza creando tu primera clase o uniéndote a una existente</p>
                @if (rol == "Profesor")
                {
                    <a class="btn btn-primary btn-lg" asp-action="Create">
                        <i class="bi bi-plus-circle me-2"></i>Crear Primera Clase
                    </a>
                }
                else
                {
                    <a class="btn btn-primary btn-lg" asp-controller="Clases" asp-action="Available">
                        <i class="bi bi-search me-2"></i>Explorar Clases Disponibles
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Grid de Clases -->
        <div class="row" id="classesGrid">
            @foreach (var c in Model)
            {
                <div class="col-xl-4 col-lg-6 mb-4 class-card">
                    <div class="card h-100 class-card-content">
                        <div class="card-header d-flex justify-content-between align-items-start">
                            <div class="class-avatar bg-primary text-white rounded">
                                @c.Titulo?.Substring(0, 1)
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@c.Id">
                                            <i class="bi bi-eye me-2"></i>Ver Detalles
                                        </a>
                                    </li>
                                    @if (rol == "Profesor")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@c.Id">
                                                <i class="bi bi-pencil me-2"></i>Editar
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@c.Id">
                                                <i class="bi bi-trash me-2"></i>Eliminar
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title class-title">@c.Titulo</h5>
                            <p class="card-text text-muted class-course">@c.Curso?.Nombre</p>
                            
                            <!-- Metadatos de la Clase -->
                            <div class="class-metadata mb-3">
                                <div class="d-flex justify-content-between text-sm text-muted">
                                    <span>
                                        <i class="bi bi-people me-1"></i>
                                        <span class="student-count">@(c.UsuarioClases?.Count ?? 0) estudiantes</span>
                                    </span>
                                    <span>
                                        <i class="bi bi-calendar-event me-1"></i>
                                        <span class="session-count">@(c.Sesiones?.Count ?? 0) sesiones</span>
                                    </span>
                                </div>
                            </div>

                            <!-- Badges de Estado -->
                            <div class="class-badges mb-3">
                                <span class="badge bg-success">
                                    <i class="bi bi-circle-fill me-1"></i>Activa
                                </span>
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-clock me-1"></i>Última actividad: Hoy
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a class="btn btn-outline-primary flex-fill" asp-action="Details" asp-route-id="@c.Id">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Acceder
                                </a>
                                @if (rol == "Profesor")
                                {
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" 
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@c.Id">
                                                <i class="bi bi-pencil me-2"></i>Editar
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-people me-2"></i>Gestionar Estudiantes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-calendar-plus me-2"></i>Programar Sesión
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@c.Id">
                                                <i class="bi bi-trash me-2"></i>Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Estado Sin Resultados (oculto inicialmente) -->
        <div class="card d-none" id="noResultsCard">
            <div class="card-body text-center py-5">
                <i class="bi bi-search display-1 text-muted mb-3"></i>
                <h3 class="h4 text-muted">No se encontraron clases</h3>
                <p class="text-muted">Intenta ajustar tus filtros de búsqueda</p>
                <button class="btn btn-outline-primary" id="resetFilters">
                    <i class="bi bi-arrow-clockwise me-2"></i>Restablecer Filtros
                </button>
            </div>
        </div>
    }

    <!-- Botón Volver -->
    <div class="mt-4">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Dashboard">
            <i class="bi bi-arrow-left me-2"></i>Volver al Dashboard
        </a>
    </div>
</div>

<!-- Toast de Notificación -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="actionToast" class="toast" role="alert">
        <div class="toast-header">
            <i class="bi bi-check-circle text-success me-2"></i>
            <strong class="me-auto">Éxito</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Acción completada correctamente
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/views/Clases.Index.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/views/Clases.Index.js" asp-append-version="true"></script>
}